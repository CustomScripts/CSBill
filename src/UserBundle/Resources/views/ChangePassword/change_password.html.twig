{% set body_class = 'login-page' %}

{% extends "@SolidInvoiceCore/Layout/default_no_nav.html.twig" %}

{% block title %}{{ "Change Password" }}{% endblock title %}

{% block content %}
    <section class="container">
        <div class="card card-primary">
            {{ form_start(form) }}
            <div class="card-body">
                {{ form_row(form) }}
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    {{ icon('save') }} {{ 'change_password.submit'|trans }}
                </button>
                <a href="{{ path('_profile') }}" class="btn btn-warning">
                    {{ icon('ban') }} {{ 'profile.edit.cancel'|trans }}
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock content %}
