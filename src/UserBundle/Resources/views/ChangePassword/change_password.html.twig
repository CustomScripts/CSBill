{% extends "@SolidInvoiceCore/Layout/single_column.html.twig" %}

{% block title %}{{ "Change Password" }}{% endblock title %}

{% block content %}
    <div class="box box-primary">
        {{ form_start(form) }}
        <div class="box-body">
            {{ form_row(form) }}
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">
                {{ icon('save') }} {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
            </button>
            <a href="{{ path('fos_user_profile_show') }}" class="btn btn-warning">
                {{ icon('ban') }} {{ 'profile.edit.cancel'|trans }}
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}
