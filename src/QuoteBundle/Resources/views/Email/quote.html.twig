{% extends "CSBillCoreBundle:Layout/Email:base.html.twig" %}

{% block title %}
    {{ "quote.title"|trans({"%id%" : quote.id}) }}
{% endblock %}

{% block header %}
    <div style="text-align:center" align="center">
	<p>
	    <div style="font-size: 80%; color: #999999">
		{% set quotePath = url("_view_quote_external", {"uuid" : quote.uuid}) %}
		{{ "quote.view.online"|trans|replace({"%url%" : '<a href="' ~ quotePath ~ '">' ~ quotePath ~ '</a>'})|raw }}
	    </div>
	</p>
    </div>
{% endblock %}

{% block content %}
    {% set containerClass = '' %}
    {% embed "CSBillQuoteBundle::quote_template.html.twig" %}
	{% block title %}
	{% endblock %}
    {% endembed %}
{% endblock %}
