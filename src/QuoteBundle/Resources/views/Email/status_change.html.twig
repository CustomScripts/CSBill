{% extends "@SolidInvoiceCore/Layout/Email/notification.html.twig" %}

{% block title %}
    {{ 'quote.status_change.heading'|trans({}, 'email') }}
{% endblock %}

{% block content %}
    <table class="table table-striped">
        <tr>
            <th>
                {{ 'quote.status_change.id'|trans({}, 'email') }}
            </th>
            <td>
                <a href="{{ url('_quotes_view', {'id' : quote.id}) }}">
                    {{ quote.id }}
                </a>
            </td>
        </tr>
        <tr>
            <th>
                {{ 'quote.status_change.new_status'|trans({}, 'email') }}
            </th>
            <td>
                {{ quote_label(quote.status) }}
            </td>
        </tr>
    </table>
{% endblock %}
