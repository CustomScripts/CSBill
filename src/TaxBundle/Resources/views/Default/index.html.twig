{% extends "CSBillCoreBundle:Layout:single_column.html.twig" %}

{% block sidebar %}
    {{ menu('tax_index') }}
{% endblock sidebar %}

{% block title %}{{ 'tax.rates.title'|trans }}{% endblock title %}

{% block content %}
    <div class="widget">
	    {{ render_grid('tax_grid') }}
    </div>
{% endblock %}

{% block heading %}
<fieldset class="page-heading">
    <legend>
	<div class="pull-right header-button">
	    <a class="btn btn-info" href="{{ path("_add_tax_rate") }}">
	    {{ icon('money') }} {{ "tax.rates.add"|trans }}
	    </a>
	</div>
	<h3>{{ block('title') }}</h3>
    </legend>
</fieldset>
{% endblock %}
