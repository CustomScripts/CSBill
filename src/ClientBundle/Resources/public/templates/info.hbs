<div class="box no-border client_contact_list">
    <div class="box-header">
            <div class="box-tools">
                <a href="{{path "_xhr_clients_add_contact" id=id }}" class="btn btn-success btn-sm" data-id="{{ id }}" id="add-contact-button">
                    <i class="fa fa-user"></i> {{trans "client.view.actions.add_contact" }}
                </a>
                <div id="contacts-ajax-modal" class="modal fade" tabindex="-1"></div>
            </div>

        <h3 class="box-title">
            <i class="fa fa-users"></i> {{trans "client.heading.contacts" }}
        </h3>
    </div>

    <div class="box-body">
        <div class="box-group">
            <div id="client-contacts-list"></div>
        </div>
    </div>
</div>

{{# if addresses }}
    <div class="box no-border client_address_list">
        <div class="box-header">
            <h3 class="box-title">
                <i class="fa fa-building-o"></i> {{trans "client.heading.addresses" }}
            </h3>
        </div>

        <div class="box-body">
            <div class="box-group">
                <div id="client-address-list"></div>
            </div>
        </div>
    </div>
{{/if}}
