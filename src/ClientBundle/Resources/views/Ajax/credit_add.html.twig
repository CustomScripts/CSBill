{{ form_start(form) }}
    <div class="modal-header">
	<h3>{{ "client.modal.add_credit"|trans }}</h3>
    </div>
    <div class="modal-body">
	<div class="row-fluid">
	    {{ form_row(form) }}
	</div>
    </div>
    <div class="modal-footer">
	<button data-dismiss="modal" class="btn btn-warning btn-flat">
	    {{ icon('times') }} {{ "client.modal.action.close"|trans }}
	</button>
	<button type="submit" class="btn btn-success btn-flat">
	    {{ icon('save') }} {{ "client.modal.action.save"|trans }}
	</button>
    </div>
{{ form_end(form) }}
