<nav>
    {% if header_content is not defined or header_content is empty %}
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    {% endif %}

    <div class="container">
        {% if header_content is defined %}
            {{ header_content }}
        {% endif %}

        <div class="collapse navbar-collapse" id="top_menu">
            {{ menu('top', {'attr' : {'class' : 'nav navbar-nav'}}) }}

            {{ menu('top_right', {'attr' : {'class' : 'nav navbar-nav navbar-right'}}) }}

            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <div class="btn-group d-none" id="top-menu-create-button">
                    <button class="btn btn-info btn-sm dropdown-toggle margin" type="button" data-toggle="dropdown">
                        {{ icon('plus') }} {{ 'menu.button.create'|trans }} <b class="caret"></b>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="{{ path('_clients_add') }}">
                                {{ icon('user-plus') }} {{ 'dashboard.create.client'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('_quotes_create') }}">
                                {{ icon('file-text-o') }} {{ 'dashboard.create.quote'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('_invoices_create') }}">
                                {{ icon('file-text-o') }} {{ 'dashboard.create.invoice'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</nav>
