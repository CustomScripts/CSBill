{% set locale = app.request.locale|split('_')[0] %}

<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="{{ locale }}"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang="{{ locale }}"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="{{ locale }}"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ locale }}"> <!--<![endif]-->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{{ block('page_title') is defined  ? block('page_title') : (block('title') is defined ? block('title')) }}</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    {% block stylesheets %}
	    <link rel="stylesheet" href="{{ asset('css/app.css') }}" type="text/css" />
    {% endblock stylesheets %}

    {% include '@SolidInvoiceCore/_partials/scripts.html.twig' %}

</head>
<body class="{{ setting('design/system/theme', 'skin-blue') }} fixed sidebar-mini {{ body_class|default('') }}">
    <div class="wrapper">
        {{ block('body_top') is defined ? block('body_top') }}
        <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

        <header class="main-header">
            {{ block('header') is defined ? block('header') }}
        </header>

        <div class="content-wrapper">
            {{ block('body') is defined ? block('body') }}
        </div>

        <footer class="main-footer">
            {{ block('footer') is defined ? block('footer') }}
        </footer>

        {{ block('scripts') is defined ? block('scripts') }}

        {{ block('body_bottom') is defined ? block('body_bottom') }}
    </div>
</body>
</html>
